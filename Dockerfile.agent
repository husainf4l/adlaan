# AI Agent Service Configuration for Google Cloud Run
FROM python:3.9-slim

WORKDIR /app

# Copy AI agent files
COPY adlaan-agent/ ./

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Expose port
EXPOSE 8005

# Set environment variables
ENV PYTHONPATH=/app
ENV PORT=8005

# Run the AI agent server
CMD python main.py --host 0.0.0.0 --port $PORT