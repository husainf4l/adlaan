{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Development Server (Fastify)",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"start:dev"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$tsc"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}